{
    "compileOnSave": false,
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": "./",
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "paths": {
            "#C/*": ["src/config/*"],
            "#M/*": ["src/main/*"],
            "#P/*": ["src/provide/*"],
            "#S/*": ["style/*"],
            "#U/*": ["src/mutate/*"],
            "#R^components/*": ["src/renderer/components/*"],
            "#R^util/*": ["src/renderer/util/*"],
            "#R~center/*": ["src/renderer/scene/center/*"],
            "#R~execute/*": ["src/renderer/scene/execute/*"]
        },
        "removeComments": true,
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es5"
    }
}