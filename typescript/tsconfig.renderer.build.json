{
    "compileOnSave": false,
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": "../src",
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "paths": {
            "#C/*": ["config/*"],
            "#M/*": ["main/*"],
            "#P/*": ["provide/*"],
            "#R^components/*": ["renderer/components/*"],
            "#R^style/*": ["renderer/style/*"],
            "#R^util/*": ["renderer/util/*"],
            "#R~execute/*": ["renderer/scene/execute/*"]
        },
        "removeComments": true,
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es5",
    },
    "exclude": [
        "node_modules",
        "test"
    ],
    "include": [
        "src/config/**/*",
        "src/renderer/**/*"
    ]
}