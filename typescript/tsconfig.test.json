{
    "compilerOptions": {
        "baseUrl": "../src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "paths": {
            "#M/*": ["main/*"],
            "#P/*": ["provide/*"],
            "#R^components/*": ["renderer/components/*"],
            "#R^style/*": ["renderer/style/*"],
            "#R^util/*": ["renderer/util/*"],
            "#R~execute/*": ["renderer/scene/execute/*"]
        },
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    }
}